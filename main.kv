<MenuScreen>:
    canvas.before:
        Color:
            rgba: 0.1, 0.1, 0.1, 1 
        Rectangle:
            pos: self.pos
            size: self.size

    BoxLayout:
        orientation: 'vertical'
        padding: dp(20)  # Fixed padding to reduce calculations
        spacing: dp(20)

        Widget:
            size_hint_y: 0.2

        Label:
            text: 'Panan Online'
            font_size: min(root.width * 0.1, dp(100))
            color: 1, 0.8, 0, 1
            size_hint_y: None
            height: dp(120)
            bold: True
            pos_hint: {'center_x': 0.5}
        
        Widget:
            size_hint_y: 0.1

        # Button container with fixed size hints
        BoxLayout:
            orientation: 'vertical'
            spacing: dp(20)
            size_hint: (0.45, None)  # Reduced from 0.6 to 0.45 (15% smaller)
            height: dp(340)  # Reduced from 400 to 340 (15% smaller)
            pos_hint: {'center_x': 0.5}

            # Game buttons with consistent sizing
            Button:
                text: 'Roulette'
                font_size: min(self.width * 0.15, dp(35))  # Reduced from 40 to 35
                background_color: 0.2, 0.2, 0.2, 1
                background_normal: ''
                size_hint_y: 0.3
                pos_hint: {'center_x': 0.5}
                on_press: 
                    root.manager.transition.direction = 'left'
                    app.root.current = 'roulette'

            Button:
                text: 'Blackjack'
                font_size: min(self.width * 0.15, dp(35))
                background_color: 0.2, 0.2, 0.2, 1
                background_normal: ''
                size_hint_y: 0.3
                pos_hint: {'center_x': 0.5}
                on_press: 
                    root.manager.transition.direction = 'left'
                    app.root.current = 'blackjack'

            Button:
                text: 'Quit Game'
                font_size: min(self.width * 0.15, dp(35))
                background_color: 0.2, 0.2, 0.2, 1
                background_normal: ''
                size_hint_y: 0.3
                pos_hint: {'center_x': 0.5}
                on_press: app.stop()

        Widget:
            size_hint_y: 0.2
