<MenuScreen>:
    canvas.before:
        Color:
            rgba: 0.1, 0.1, 0.1, 1  # สีพื้นหลังเข้ม
        Rectangle:
            pos: self.pos
            size: self.size

    MDBoxLayout:
        orientation: 'vertical'
        padding: dp(20)
        spacing: dp(20)
        size_hint: (1, 1)
        pos_hint: {'center_x': 0.5, 'center_y': 0.5}

        MDLabel:
            text: 'Panan Online'
            font_style: 'H2'
            halign: 'center'
            theme_text_color: 'Custom'
            text_color: 1, 0.8, 0, 1
            size_hint_y: None
            height: self.texture_size[1]

        Widget:
            size_hint_y: None
            height: dp(30)  # Adjust the height as needed

        MDBoxLayout:
            orientation: 'vertical'
            size_hint: (1, None)
            height: dp(300)
            spacing: dp(20)
            padding: dp(50), 0
            pos_hint: {'center_x': 0.5}

            MDRaisedButton:
                text: 'Roulette'
                pos_hint: {'center_x': 0.5}
                size_hint: (0.8, None)
                height: dp(50)
                font_size: dp(18)
                md_bg_color: 0.2, 0.6, 0.86, 1  # สีฟ้า
                on_release:
                    root.manager.transition.direction = 'left'
                    app.root.current = 'roulette'

            MDRaisedButton:
                text: 'Blackjack'
                pos_hint: {'center_x': 0.5}
                size_hint: (0.8, None)
                height: dp(50)
                font_size: dp(18)
                md_bg_color: 0.2, 0.6, 0.86, 1  # สีฟ้า
                on_release:
                    root.manager.transition.direction = 'left'
                    app.root.current = 'blackjack'

            MDRaisedButton:
                text: 'Exit'
                pos_hint: {'center_x': 0.5}
                size_hint: (0.8, None)
                height: dp(50)
                font_size: dp(18)
                md_bg_color: 1, 0, 0, 1  # สีแดง
                on_release:
                    app.stop()
