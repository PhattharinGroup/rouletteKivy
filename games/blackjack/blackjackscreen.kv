<BlackjackGameLayout>:
    canvas.before:
        Color:
            rgba: 0.8, 0.8, 0.8, 1  # สีพื้นหลังเทา
        Rectangle:
            pos: self.pos
            size: self.size
            source: 'assets/background.png'  

    orientation: 'vertical'
    spacing: dp(20)
    size_hint: None, None
    width: dp(800)  
    height: dp(600)
    pos_hint: {"center_x": 0.5, "center_y": 0.5}

    MDLabel:
        text: "Blackjack Game"
        font_style: "H3"
        halign: "center"
        size_hint_y: None
        height: dp(50)

    MDBoxLayout:
        orientation: 'vertical'
        size_hint: None, None
        size: dp(600), dp(250)
        spacing: dp(10)
        pos_hint: {"center_x": 0.5}

        MDLabel:
            text: "Dealer's Cards"
            font_style: "H5"
            halign: "center"
            size_hint_y: None
            height: dp(30)

        MDBoxLayout:
            id: dealer_cards
            orientation: 'horizontal'
            size_hint: None, None
            size: dp(600), dp(120)
            spacing: dp(10)
            pos_hint: {"center_x": 0.5}

        MDLabel:
            text: "Player's Cards"
            font_style: "H5"
            halign: "center"
            size_hint_y: None
            height: dp(30)

        MDBoxLayout:
            id: player_cards
            orientation: 'horizontal'
            size_hint: None, None
            size: dp(600), dp(120)
            spacing: dp(10)
            pos_hint: {"center_x": 0.5}

    MDLabel:
        id: info_label
        text: "Welcome to Blackjack!"
        font_style: "H5"
        halign: "center"
        size_hint_y: None
        height: dp(30)
        markup: True

    MDBoxLayout:
        orientation: 'vertical'
        size_hint: None, None
        size: dp(600), dp(240)
        spacing: dp(10)
        pos_hint: {"center_x": 0.5}

        MDRaisedButton:
            text: 'Deal'
            font_size: dp(20)
            size_hint: None, None
            size: dp(150), dp(60)
            md_bg_color: app.theme_cls.primary_color
            pos_hint: {"center_x": 0.5}
            on_press: root.deal(None)

        MDRaisedButton:
            text: 'Hit'
            font_size: dp(20)
            size_hint: None, None
            size: dp(150), dp(60)
            md_bg_color: 1, 0, 0, 1
            pos_hint: {"center_x": 0.5}
            on_press: root.hit(None)

        MDRaisedButton:
            text: 'Stand'
            font_size: dp(20)
            size_hint: None, None
            size: dp(150), dp(60)
            md_bg_color: 0, 0.6, 0, 1
            pos_hint: {"center_x": 0.5}
            on_press: root.stand(None)

        MDRaisedButton:
            text: 'Back to Menu'
            font_size: dp(20)
            size_hint: None, None
            size: dp(150), dp(60)
            md_bg_color: 0.3, 0.3, 0.3, 1
            pos_hint: {"center_x": 0.5}
            on_press:
                app.root.current = 'menu'
                app.root.transition.direction = "up"
